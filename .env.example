# StudySprint 4.0 Environment Configuration
# Copy this file to .env and update values for your environment

# Database Configuration
DATABASE_URL=postgresql://studysprint:studysprint_dev_password@localhost:5432/studysprint4
POSTGRES_DB=studysprint4
POSTGRES_USER=studysprint
POSTGRES_PASSWORD=studysprint_dev_password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=500
BACKUP_DIR=./backups
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# Study Configuration
DEFAULT_POMODORO_WORK_MINUTES=25
DEFAULT_POMODORO_SHORT_BREAK_MINUTES=5
DEFAULT_POMODORO_LONG_BREAK_MINUTES=15
READING_SPEED_WPM_AVERAGE=250
DEFAULT_SESSION_GOAL_MINUTES=60

# AI Configuration (OpenAI)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
AI_FEATURES_ENABLED=true

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
JWT_SECRET_KEY=your-jwt-secret-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=StudySprint 4.0 <noreply@studysprint.com>

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_ENVIRONMENT=development
VITE_APP_NAME=StudySprint 4.0
VITE_APP_VERSION=1.0.0

# Performance Configuration
WORKER_PROCESSES=1
MAX_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=5

# Analytics Configuration
ANALYTICS_ENABLED=true
METRICS_RETENTION_DAYS=90

# Backup Configuration
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE_HOURS=24
BACKUP_RETENTION_DAYS=30

# Development Configuration
RELOAD=true
ACCESS_LOG=true
ERROR_LOG=true
