/* frontend/src/App.css */
#root {
  max-width: 1200px;
  margin: 0 auto;
  padding: 1rem;
  min-height: 100vh;
}

.App {
  min-height: 100vh;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding: 2rem 0;
}

.App-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 3rem 2rem;
  border-radius: 20px;
  color: white;
  box-shadow: 0 20px 40px rgba(0,0,0,0.1);
  width: 100%;
  max-width: 1000px;
}

h1 {
  font-size: 3rem;
  margin-bottom: 0.5rem;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
  text-align: center;
}

.subtitle {
  text-align: center;
  font-size: 1.2rem;
  margin-bottom: 2rem;
  opacity: 0.9;
}

/* Loading State */
.loading {
  text-align: center;
  padding: 2rem;
}

.spinner {
  width: 40px;
  height: 40px;
  border: 4px solid rgba(255,255,255,0.3);
  border-top: 4px solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 1rem;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Error State */
.error {
  text-align: center;
  background: rgba(255,0,0,0.1);
  border: 1px solid rgba(255,0,0,0.3);
  padding: 2rem;
  border-radius: 10px;
  margin: 1rem 0;
}

.error-help {
  margin-top: 1rem;
  font-size: 0.9rem;
}

.error-help code {
  background: rgba(0,0,0,0.2);
  padding: 0.5rem 1rem;
  border-radius: 5px;
  display: inline-block;
  margin-top: 0.5rem;
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
}

/* Status Section */
.status-section {
  text-align: center;
  margin-bottom: 2rem;
}

.status-section h2 {
  margin-bottom: 1rem;
  font-size: 1.5rem;
}

.api-stats {
  display: flex;
  justify-content: center;
  gap: 2rem;
  margin-bottom: 2rem;
}

.stat {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255,255,255,0.1);
  padding: 1rem;
  border-radius: 10px;
  min-width: 80px;
}

.stat-number {
  font-size: 2rem;
  font-weight: bold;
  margin-bottom: 0.25rem;
}

.stat-label {
  font-size: 0.8rem;
  opacity: 0.8;
}

/* Features Grid */
.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1.5rem;
  margin: 2rem 0;
}

.feature-card {
  background: rgba(255,255,255,0.1);
  padding: 1.5rem;
  border-radius: 15px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255,255,255,0.2);
  transition: all 0.3s ease;
}

.feature-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.2);
}

.feature-card h3 {
  margin: 0 0 0.5rem 0;
  font-size: 1.1rem;
}

.feature-card p {
  margin: 0 0 1rem 0;
  opacity: 0.9;
}

.feature-details {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.feature-details small {
  opacity: 0.7;
  font-size: 0.8rem;
}

.feature-card.completed {
  border-color: rgba(46, 204, 113, 0.5);
  background: linear-gradient(135deg, rgba(46, 204, 113, 0.1), rgba(255,255,255,0.1));
}

.feature-card.in-progress {
  border-color: rgba(241, 196, 15, 0.5);
  background: linear-gradient(135deg, rgba(241, 196, 15, 0.1), rgba(255,255,255,0.1));
}

.feature-card.pending {
  border-color: rgba(149, 165, 166, 0.5);
  background: linear-gradient(135deg, rgba(149, 165, 166, 0.1), rgba(255,255,255,0.1));
}

/* Actions Section */
.actions-section {
  text-align: center;
  margin: 2rem 0;
}

.actions-section h3 {
  margin-bottom: 1rem;
}

.action-buttons {
  display: flex;
  justify-content: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.action-btn {
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  text-decoration: none;
  display: inline-block;
  transition: all 0.3s ease;
  cursor: pointer;
  font-size: 0.9rem;
}

.action-btn.primary {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
  color: white;
}

.action-btn.primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(231, 76, 60, 0.4);
}

.action-btn.secondary {
  background: rgba(255,255,255,0.2);
  color: white;
  border: 1px solid rgba(255,255,255,0.3);
}

.action-btn.secondary:hover {
  background: rgba(255,255,255,0.3);
  transform: translateY(-2px);
}

/* Data Section */
.data-section {
  margin: 2rem 0;
}

.data-section h3 {
  text-align: center;
  margin-bottom: 1rem;
}

.data-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 1.5rem;
}

.data-card {
  background: rgba(255,255,255,0.1);
  padding: 1.5rem;
  border-radius: 10px;
  border: 1px solid rgba(255,255,255,0.2);
}

.data-card h4 {
  margin: 0 0 1rem 0;
  padding-bottom: 0.5rem;
  border-bottom: 1px solid rgba(255,255,255,0.2);
}

.data-list {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.data-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem;
  background: rgba(255,255,255,0.05);
  border-radius: 5px;
}

.topic-color {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  flex-shrink: 0;
}

.data-name {
  flex-grow: 1;
  font-weight: 500;
}

.data-meta {
  font-size: 0.8rem;
  opacity: 0.7;
}

.data-more {
  font-style: italic;
  opacity: 0.6;
}

/* Progress Section */
.progress-section {
  margin: 2rem 0;
  text-align: center;
}

.progress-section h3 {
  margin-bottom: 1rem;
}

.progress-items {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin-bottom: 1rem;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.progress-item {
  padding: 0.5rem 1rem;
  background: rgba(255,255,255,0.1);
  border-radius: 5px;
  text-align: left;
  font-size: 0.9rem;
}

.progress-item.completed {
  background: linear-gradient(135deg, rgba(46, 204, 113, 0.2), rgba(255,255,255,0.1));
  border-left: 3px solid #2ecc71;
}

.next-stage {
  background: rgba(255,255,255,0.1);
  padding: 1rem;
  border-radius: 10px;
  margin-top: 1rem;
}

/* Responsive Design */
@media (max-width: 768px) {
  .App-header {
    padding: 2rem 1rem;
  }
  
  h1 {
    font-size: 2rem;
  }
  
  .features-grid {
    grid-template-columns: 1fr;
  }
  
  .api-stats {
    flex-direction: column;
    gap: 1rem;
  }
  
  .action-buttons {
    flex-direction: column;
    align-items: center;
  }
  
  .data-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 480px) {
  #root {
    padding: 0.5rem;
  }
  
  .App {
    padding: 1rem 0;
  }
  
  .App-header {
    padding: 1.5rem 1rem;
  }
  
  h1 {
    font-size: 1.8rem;
  }
  
  .subtitle {
    font-size: 1rem;
  }
}